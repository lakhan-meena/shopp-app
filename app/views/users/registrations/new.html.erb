<div class="py-5 signin-top-mrgn">
  <div class="container px-4 px-lg-5 mt-5">
    <h2>Sign up</h2>

    <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= f.error_notification %>
      <div class="form-inputs">
        <%= f.input :first_name, required: false, input_html: {class: "input-form"} %>
        <%= f.input :last_name, required: false, input_html: {class: "input-form"} %>
        <%= f.input :mobile_number, required: false, input_html: {class: "input-form"} %>
        <%= f.input :email, required: false, autofocus: false, input_html: {class: "input-form"} %>
        <%= f.input :password, required: false, input_html: {class: "input-form"} %>
        <%= f.input :password_confirmation, required: false, input_html: {class: "input-form"} %>
      </div>

      <div class="form-actions">
        <%= f.button :submit, "Sign up",  class: "btn btn-outline-dark btn-sm form-button" %>
      </div>
    <% end %>

  </div>
</div>
