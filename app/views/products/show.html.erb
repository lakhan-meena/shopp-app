<div class="container px-4 px-lg-5 mt-5">
  <div class="card show-card">
    <div class="container-fliud">
      <div class="wrapper row">
        <div class="preview col-md-6">
          <div class="preview-pic tab-content">
            <div class="tab-pane active">
              <%= image_tag(@product.image.url, class: "card-img-top product-detail-image")%>
            </div>
          </div>
        </div>
        <div class="details col-md-6">
          <h3 class="product-title">
            <%= @product.title %>
          </h3>
          <div class="rating">
            <span class="review-no">41 reviews</span>
          </div>
          <p class="product-description">
            <%= @product.description %>
          </p>
          <h4 class="price">
            Current Price: <span><%= @product.price %></span>
          </h4>
          <p class="vote"><strong>71%</strong> of buyers enjoyed this product! <strong>(87 votes)</strong></p>
          <div class="action">
            <%= render 'shared/add_to_cart', product: @product %>
            <%= link_to "Add to wishlist", "", class: "btn btn-outline-dark mt-auto" %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
